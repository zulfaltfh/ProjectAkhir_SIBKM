@model IEnumerable<API_New.Models.Users>

@{
    ViewData["Title"] = "Data User";
}

<h1>Data User</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" id="tableUser">
    <thead>
        <tr>
            <th>
                NIP
            </th>
            <th>
                Username
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Password)
            </th>*@
            <th>
                Nama Lengkap
            </th>
            <th>
                Email
            </th>
            <th>
                No Telepon
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserNIP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.UserNIP }, new { @class="btn btn-warning btn-sm me-2" })
                    @Html.ActionLink("Details", "Details", new { id=item.UserNIP }, new { @class="btn btn-info btn-sm me-2" })
                    @Html.ActionLink("Delete", "Delete", new { id=item.UserNIP }, new { @class="btn btn-danger btn-sm" })
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}